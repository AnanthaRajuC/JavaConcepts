 */
package hwPackage;

public class HelloWorld 
{
	public static void main(String[] args) 
	{
		
		System.out.println("println statement - positions the cursor onto the next line after printing the desired text");
		System.out.print("print statement   - leaves the cursor on the same line");
		
		//Concatenation using + operator 
		int a=1;
		String s = "World";
		
		System.out.println("\n\n"+a+" "+"Hello "+s+"!"); 
		
		//Printing characters 
		char b=65;
		char c='A';
		System.out.println(b);	//char variable is passed as a parameter - the graphic representation is printed and not the numeric value
		System.out.println(c); 	//char variable is passed as a parameter
		
		System.out.println((int)a); //cast the variable into one of the four integer types numeric representation

	}
}
